@model Assignment_13._1.Models.IndexViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Products</h1>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model=>model.Products.Last().Id)
            </th>
            <th>
                @Html.DisplayNameFor(model=>model.Products.Last().Name)
            </th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Products )
        {
            <tr>
                <td>@Html.DisplayFor(modelitem=>item.Id)</td>
                <td>@Html.DisplayFor(modelitem=>item.Name)</td>
                <td>
                    <a asp-action = "Details" asp-route-id = "@item.Id">Details</a>
                </td>
                <td>
                    <a asp-action = "Delete" asp-route-id = "@item.Id">Delete</a>
                </td>
                <td>
                    <a asp-action = "Update" asp-route-id = "@item.Id">Edit</a>
                </td>
            </tr>
        }
    </tbody>
</table>

<a asp-action = "AddProduct">Add Product</a>
